<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent_200</item>
        <item name="colorPrimaryVariant">@color/accent_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_200</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/accent_100</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    Action Bar for page activities (HomePage, TruckPage, DriversPage, Settings-->
    <style name="ActivitiesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent_200</item>
        <item name="colorPrimaryVariant">@color/accent_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_200</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/accent_100</item>
    </style>
</resources>
