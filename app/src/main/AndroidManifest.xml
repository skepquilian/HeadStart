<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.headstart">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- The API key for Google Maps-based APIs. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" /> <!-- Entry Logo display Launcher -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Settings -->
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".Home.HomeActivity" /> <!-- Drivers -->
        <activity
            android:name=".Drivers.DriversActivity"
            android:label="Drivers"
            android:parentActivityName=".Home.HomeActivity" /> <!-- Maps -->
        <activity
            android:name=".Map.MapActivity"
            android:label="Location"
            android:parentActivityName=".Home.HomeActivity" /> <!-- Vehicle maintenance -->
        <activity
            android:name=".MaintenanceSchedule.MaintenanceActivity"
            android:label="Schedules"
            android:parentActivityName=".Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".MaintenanceSchedule.ScheduleActivity"
            android:label="Tasks"
            android:parentActivityName=".MaintenanceSchedule.MaintenanceActivity"
            android:theme="@style/AppTheme." /> <!-- MainEntry of App -->
        <!-- Home -->
        <activity android:name=".Home.HomeActivity">

            <!--
            The meta-data tag is required if you support API level 15 and lower >
            <meta-data

                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TruckOwnerLoginForm"  /
            -->

        </activity> <!-- Register -->
        <activity
            android:name=".AuthenticateActivities.RegisterActivity"
            android:parentActivityName=".AuthenticateActivities.LoginActivity"
            android:theme="@style/AppTheme." /> <!-- Login -->
        <activity
            android:name=".AuthenticateActivities.LoginActivity"
            android:theme="@style/AppTheme." /> <!-- Reset Password -->
        <activity
            android:name=".AuthenticateActivities.ResetPassword"
            android:label="Reset Password"
            android:parentActivityName=".AuthenticateActivities.LoginActivity" />
    </application>

</manifest>