<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.headstart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Entry Logo display Launcher -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings -->
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".Home.HomeActivity"
            android:theme="@style/AppTheme."/>

        <!-- Drivers -->
        <activity
            android:name=".Drivers.DriversActivity"
            android:label="Drivers"
            android:parentActivityName=".Home.HomeActivity"
            android:theme="@style/ActivitiesTheme" />

        <!-- Maps -->
        <activity
            android:name=".Map.MapActivity"
            android:label="Location"
            android:parentActivityName=".Home.HomeActivity"/>

        <!-- Vehicles -->
        <activity
            android:name=".Trucks.TrucksActivity"
            android:label="MyVehicles"
            android:parentActivityName=".Home.HomeActivity"
            android:theme="@style/ActivitiesTheme" />
        <!-- MainEntry of App -->
        <activity android:name=".MainEntryActivity" />
        <!-- Home -->
        <activity
            android:name=".Home.HomeActivity">

            <!--
            The meta-data tag is required if you support API level 15 and lower >
            <meta-data

                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TruckOwnerLoginForm"  /
            -->

        </activity>
        <!-- Register -->
        <activity
            android:name=".AuthenticateActivities.TruckOwnerRegisterForm"
            android:parentActivityName=".AuthenticateActivities.TruckOwnerLoginForm" />
        <!-- Login -->
        <activity
            android:name=".AuthenticateActivities.TruckOwnerLoginForm"
            android:parentActivityName=".MainEntryActivity" />
        <!-- Reset Password -->
        <activity
            android:name=".AuthenticateActivities.ResetPassword"
            android:label="Reset Password"
            android:parentActivityName=".AuthenticateActivities.TruckOwnerLoginForm" />
    </application>

</manifest>